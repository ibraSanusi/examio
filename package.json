{
    "name": "next-fullstack-starter",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev --turbopack",
        "build": "npx prisma generate --no-engine && next build --turbopack",
        "start": "next start",
        "generate:db": "npx prisma generate",
        "migrate:db": "npx prisma migrate dev --name",
        "studio:db": "npx prisma studio",
        "lint": "eslint . --fix",
        "postinstall": "npx prisma generate --no-engine",
        "test": "jest --verbose --watch tests/exams.test.ts",
        "seed": "npx tsx prisma/seed.ts"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/$1"
        },
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "globals": {
            "ts-jest": {
                "tsconfig": "tsconfig.json"
            }
        }
    },
    "dependencies": {
        "@lottiefiles/dotlottie-react": "^0.17.1",
        "@mdx-js/loader": "^3.1.1",
        "@mdx-js/react": "^3.1.1",
        "@next-auth/prisma-adapter": "^1.0.7",
        "@next/mdx": "^15.5.3",
        "@prisma/client": "^6.15.0",
        "@radix-ui/react-accordion": "^1.2.12",
        "@types/mdx": "^2.0.13",
        "@vercel/analytics": "^1.5.0",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "lucide-react": "^0.544.0",
        "next": "15.5.2",
        "next-auth": "^4.24.11",
        "next-mdx-remote": "^5.0.0",
        "next-mdx-remote-client": "^2.1.6",
        "next-themes": "^0.4.6",
        "openai": "^5.19.1",
        "remark": "^15.0.1",
        "remark-gfm": "^4.0.1",
        "sonner": "^2.0.7",
        "tailwind-merge": "^3.3.1",
        "tsx": "^4.20.5",
        "zod": "^4.1.7"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3",
        "@eslint/js": "^9.35.0",
        "@tailwindcss/postcss": "^4",
        "@types/jest": "^30.0.0",
        "@types/node": "^20",
        "@types/react": "^19",
        "eslint": "^9.35.0",
        "eslint-config-next": "15.5.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-tailwindcss": "^3.18.2",
        "globals": "^16.2.0",
        "jest": "^30.1.3",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "prisma": "^6.15.0",
        "standard": "^17.1.2",
        "tailwindcss": "^4",
        "ts-jest": "^29.4.1",
        "tw-animate-css": "^1.3.8",
        "typescript": "^5",
        "typescript-eslint": "^8.35.0"
    }
}
